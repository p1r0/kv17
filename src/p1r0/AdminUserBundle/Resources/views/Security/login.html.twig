{% extends "@p1r0TplsAdminLTE/login_layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

    {% if error %}
        <p class="text-danger">{{ error|trans }}</p>
    {% endif %}
    <form class="form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <div class="body bg-gray">
            <div class="form-group">
                <input type="text" class="form-control" name="_username" id="username" placeholder="Username" value="{{ last_username }}" required="required"/>
            </div>
            <div class="form-group">
                <input class="form-control" name="_password" id="password" type="password" placeholder="Password" required="required" />
            </div>
            <div class="form-group">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />{{ 'security.login.remember_me'|trans }}
            </div>
        </div>
        <div class="footer">
            <button type="submit" class="btn bg-olive btn-block">{{ 'security.login.submit'|trans }}</button>

            <p><a href="#">I forgot my password</a></p>
        </div>
    </form>

{% endblock fos_user_content %}
